{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    "target": "es6" ,
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./prod",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@Commands/*": ["commands/*"],
      "@Database": ["database/main.ts"],
      "@Events/*": ["events/*"],
      "@Interfaces/*": ["interfaces/*"],
      "@Models/*": ["database/models/*"],
      "@Utils/*": ["utils/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "types": [
      "node",
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
  ],
}
